<% layout ('layout.ejs')%>
<div class="page-wrapper">
    <div class="page-container">
        <div class="row">
            <div class="col-xs-12 text-center logo">
                <img src="/images/LOGO.png" class="logo" />
                <p>TWITTER EMOTION ANALYTICS TOOL</p>
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="col-xs-12 text-center">
                Login using your username and password
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="col-xs-12 col-md-6 col-lg-4 col-md-offset-3 col-lg-offset-4 text-center">
              <% if (typeof error != "undefined") {%>
              <div class="alert alert-danger" role="alert"  style="width: 100%;max-width: 350px;margin-left: auto;margin-right: auto;">
                <%= error %>
              </div>
              <% } %>
              <form method="post" action="/signin" style="width: 100%;max-width: 350px;margin-left: auto;margin-right: auto;">
                <div class="form-group">
                  <input type="text" class="form-control primary" id="username" name="username" placeholder="Username" value="<%= (typeof username != 'undefined')?username:''%>">
                </div>
                <div class="form-group">
                  <input type="password" class="form-control primary" id="password" name="password" placeholder="Password">
                </div>
                <button class="btn btn-block btn-success" type="submit">Login</button>
              </form>
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="col-xs-12 text-center">
                <p>Problem in accessing your Account? Troubleshoot <a href="/forgot">here</a><br/>Don't have a TWEAL Account? Create one <a href="/signup">here</a></p>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 text-center">
                TWEAL &copy; 2017. All Rights Reserved.
            </div>
        </div>
    </div>
</div>
