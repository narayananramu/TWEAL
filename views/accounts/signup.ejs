<% layout ('layout.ejs') %>
<div class="page-wrapper">
    <div class="page-container">
        <div class="row">
            <div class="col-xs-12 text-center logo">
                <img src="/images/LOGO.png" class="logo" />
                <p>TWITTER EMOTION ANALYTICS TOOL</p>
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="col-xs-12 text-center">
                Create a TWEAL Account
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="col-xs-12 col-md-6 col-lg-4 col-md-offset-3 col-lg-offset-4 text-center">
                <form method="post" action="/signup" style="width: 100%;max-width: 350px;margin-left: auto;margin-right: auto;">
                  <% if(typeof error != "undefined") {%>
                  <div class="alert alert-danger" role="alert">
                    <%= error %>
                  </div>
                  <%}%>
                  <div class="form-group">
                    <input type="text" class="form-control primary" id="fname" name="fname" placeholder="First Name" value="<%= (typeof fname != 'undefined')?fname:''%>">
                  </div>
                  <div class="form-group">
                    <input type="text" class="form-control primary" id="lname" name="lname" placeholder="Last Name" value="<%= (typeof lname != 'undefined')?lname:''%>">
                  </div>
                  <div class="form-group">
                    <input type="email" class="form-control primary" id="email" name="email" placeholder="Email Address" value="<%= (typeof email != 'undefined')?email:''%>">
                  </div>
                  <div class="form-group">
                    <input type="text" class="form-control primary" id="username" name="username" placeholder="Preferred Username" value="<%= (typeof username != 'undefined')?username:''%>"  pattern=".{4,10}">
                  </div>
                  <div class="form-group">
                    <input type="password" class="form-control primary" id="password" name="password" placeholder="Password" pattern=".{6,18}">
                  </div>
                  <button class="btn btn-block btn-success" type="submit">Signup</button>
                </form>
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="col-xs-12 text-center">
                <p>Already have a TWEAL Account? Login <a href="/signin">here</a><br/>Problem in accessing your Account? Troubleshoot <a href="/forgot">here</a></p>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 text-center">
                TWEAL &copy; 2017. All Rights Reserved.
            </div>
        </div>
    </div>
</div>
